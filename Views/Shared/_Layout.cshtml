                $("#p4").slideToggle();
            }
            function btn5()
            {
                $("#p5").slideToggle();
            }
            function btn6()
            {
                $("#p6").slideToggle();
            }
            function btn7()
            {
                $("#p7").slideToggle();
            }
            function btn8()
            {
                $("#p8").slideToggle();
            }
            function btn9()
            {
                $("#p9").slideToggle();
            }
        </script>            
    }
</body>