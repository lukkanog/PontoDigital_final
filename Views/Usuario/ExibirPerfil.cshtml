@model PontoDigital_final.ViewModels.UsuarioViewModel
@{
    ViewData["Title"] = "Perfil | Ponto Digital";
    ViewData["css"] = "perfil-style.css";
}
<main class="container">
    <div class="content">

        <h2>@Model.Usuario.Nome</h2>
        <div id="dados-perfil">
            <div>
                <p>Endere√ßo: @Model.Usuario.Endereco</p>
                <p>Telefone: @Model.Usuario.Telefone</p>
                <p>Data de nascimento: @Model.Usuario.DataNascimento.ToShortDateString()</p>
                <p>Empresa: @Model.Usuario.Empresa.Nome</p>
                <p>CNPJ da empresa: @Model.Usuario.Empresa.Cnpj</p>
            </div>
            
            <div id="flex-coluna">
                <p>Foto de perfil:</p>
                <img src="@Model.Usuario.UrlFoto" alt="Foto de Perfil" id="foto_perfil">
                <a href='@Url.Action("EditarPerfil","Usuario")' class="link">Editar Perfil</a>
            </div>
        </div>
    </div>
</main>